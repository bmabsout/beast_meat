---
interface Props {
  class?: string;
  background?: 'white' | 'slate' | 'dark';
}

const { 
  class: className = '',
  background = 'white'
} = Astro.props;

const bgColors = {
  white: 'bg-white',
  slate: 'bg-[var(--color-slate-100)]',
  dark: 'bg-[var(--color-meat-charred)] text-white'
};
---

<section class:list={[
  'py-12 md:py-16 lg:py-20',
  bgColors[background],
  className
]}>
  <slot />
</section> 