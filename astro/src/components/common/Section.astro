---
interface Props {
  class?: string;
  background?: 'white' | 'slate' | 'dark';
  id?: string;
}

const { 
  class: className = '',
  background = 'white',
  id
} = Astro.props;

const bgColors = {
  white: 'bg-white',
  slate: 'bg-[var(--color-slate-900)]',
  dark: 'bg-[var(--color-meat-charred)] text-white'
};
---

<section 
  class:list={[
    'py-12 md:py-16 lg:py-20',
    bgColors[background],
    className
  ]}
  id={id}
>
  <slot />
</section> 