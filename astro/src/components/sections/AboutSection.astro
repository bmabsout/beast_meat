---
import Container from '../common/Container.astro';
import Section from '../common/Section.astro';
import { Image } from 'astro:assets';

export interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<Section class:list={['py-16 md:py-24', className]}>
  <Container>
    <div class="grid md:grid-cols-2 gap-12 md:gap-16 items-center">
      <!-- Text Content -->
      <div class="space-y-8">
        <div class="space-y-4">
          <h2 class="font-heading text-4xl md:text-5xl">25+ Years of Excellence</h2>
          <p class="text-slate-700 text-lg md:text-xl">
            Beast Meat has extensive experience spanning over 25 years of sourcing and supplying meat and meat products throughout the region and we strive to extend that to our customers in Dubai.
          </p>
          <p class="text-slate-700 text-lg">
            Our extensive sourcing network covers the whole world making sure we give you product from the best producers to suit all your requirements.
          </p>
          <p class="text-slate-700 text-lg">
            Nestled in the Dubai Hills community, our store offers upwards of 3000 square feet of an extensive offering to cover everything you might need from a butchery and more!
          </p>
        </div>
        
        <!-- Values -->
        <div class="grid sm:grid-cols-2 gap-6">
          <div class="space-y-2">
            <h3 class="font-heading text-xl text-[var(--color-beast-red)]">Quality Without Compromise</h3>
            <p class="text-slate-600">Global sourcing from the best producers and locally produced options to suit all requirements.</p>
          </div>
          <div class="space-y-2">
            <h3 class="font-heading text-xl text-[var(--color-beast-red)]">Exceptional Service</h3>
            <p class="text-slate-600">Experienced staff with a long tradition ready to help you navigate the meat world.</p>
          </div>
          <div class="space-y-2">
            <h3 class="font-heading text-xl text-[var(--color-beast-red)]">Authentic Flavors</h3>
            <p class="text-slate-600">Finest ingredients and expert preparation for tastes you will remember.</p>
          </div>
          <div class="space-y-2">
            <h3 class="font-heading text-xl text-[var(--color-beast-red)]">Complete Experience</h3>
            <p class="text-slate-600">From daily butchery needs to hot meals and lavish live station catering experiences.</p>
          </div>
        </div>
      </div>

      <!-- Image Grid -->
      <div class="grid grid-cols-2 gap-4">
        <div class="space-y-4">
          <div class="aspect-[4/5] bg-slate-100 rounded-lg overflow-hidden">
            <Image
              src="/images/catering_photos/cuts.jpg"
              alt="Premium meat cuts selection"
              width={500}
              height={625}
              class="w-full h-full object-cover"
            />
          </div>
          <div class="aspect-[4/3] bg-slate-100 rounded-lg overflow-hidden">
            <Image
              src="/images/catering_photos/grape_leafs.jpg"
              alt="Delicious grape leaf preparation"
              width={500}
              height={375}
              class="w-full h-full object-cover"
            />
          </div>
        </div>
        <div class="space-y-4 pt-8">
          <div class="aspect-[4/3] bg-slate-100 rounded-lg overflow-hidden">
            <Image
              src="/images/catering_photos/474470988_17861235624339547_6562859976884574656_n.jpg"
              alt="Catering presentation"
              width={500}
              height={375}
              class="w-full h-full object-cover"
            />
          </div>
          <div class="aspect-[4/5] bg-slate-100 rounded-lg overflow-hidden">
            <Image
              src="/images/catering_photos/474526161_17861510733339547_4694253364427067020_n.jpg"
              alt="Professional catering service"
              width={500}
              height={625}
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </Container>
</Section> 