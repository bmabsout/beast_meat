---
import Layout from '../layouts/Layout.astro';
import Section from '../components/common/Section.astro';
import Container from '../components/common/Container.astro';

const contactInfo = {
  phone: '+971 4 330 6680',
  email: 'customerservice@beastmeat.com',
  website: 'beastmeat.com',
  address: 'Acacia 1 - Dubai Hills - Dubai, UAE',
  hours: 'Monday-Saturday: 9am-8pm, Sunday: 10am-6pm',
  catering: 'Available 7 days a week by appointment'
};

const socialLinks = [
  { name: 'Instagram', url: 'https://instagram.com/beastmeatcatering', icon: 'M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z' }
];
---

<Layout 
  title="Contact Beast Meat - Premium Butchery & Catering"
  description="Contact Beast Meat for premium butchery services, catering inquiries, or to place an order. We're here to serve your meat and catering needs."
>
  <main class="pt-16">
    <!-- Hero Section -->
    <Section class="bg-[var(--color-meat-charred)] text-white py-20 md:py-24">
      <Container>
        <div class="max-w-3xl mx-auto text-center space-y-6">
          <h1 class="font-heading text-5xl md:text-6xl">
            Get In <span class="text-[var(--color-beast-red)]">Touch</span>
          </h1>
          <p class="text-lg md:text-xl text-slate-300">
            We'd love to hear from you. Reach out for inquiries, orders, or to schedule a catering consultation.
          </p>
        </div>
      </Container>
    </Section>

    <!-- Contact Information Section -->
    <Section>
      <Container>
        <div class="max-w-5xl mx-auto">
          <div class="grid md:grid-cols-2 gap-12">
            <!-- Contact Information -->
            <div class="space-y-8">
              <div>
                <h2 class="font-heading text-3xl mb-6">Contact Information</h2>
                <p class="text-slate-600 mb-8">
                  Have questions about our products or services? Need to place an order? We're here to help!
                </p>
              </div>

              <div class="space-y-6">
                <div class="flex items-start">
                  <div class="w-12 h-12 bg-[var(--color-beast-red)] rounded-full flex items-center justify-center mr-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-heading text-xl mb-1">Phone</h3>
                    <a href={`tel:${contactInfo.phone.replace(/\s+/g, '')}`} class="text-slate-600 hover:text-[var(--color-beast-red)] transition-colors">
                      {contactInfo.phone}
                    </a>
                  </div>
                </div>

                <div class="flex items-start">
                  <div class="w-12 h-12 bg-[var(--color-beast-red)] rounded-full flex items-center justify-center mr-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-heading text-xl mb-1">Email</h3>
                    <a href={`mailto:${contactInfo.email}`} class="text-slate-600 hover:text-[var(--color-beast-red)] transition-colors">
                      {contactInfo.email}
                    </a>
                  </div>
                </div>

                <div class="flex items-start">
                  <div class="w-12 h-12 bg-[var(--color-beast-red)] rounded-full flex items-center justify-center mr-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-heading text-xl mb-1">Website</h3>
                    <a href={`https://${contactInfo.website}`} class="text-slate-600 hover:text-[var(--color-beast-red)] transition-colors">
                      {contactInfo.website}
                    </a>
                  </div>
                </div>

                <div class="flex items-start">
                  <div class="w-12 h-12 bg-[var(--color-beast-red)] rounded-full flex items-center justify-center mr-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-heading text-xl mb-1">Location</h3>
                    <p class="text-slate-600">
                      {contactInfo.address}
                    </p>
                  </div>
                </div>
              </div>

              <div class="pt-4">
                <h3 class="font-heading text-xl mb-3">Business Hours</h3>
                <div class="space-y-2">
                  <p class="text-slate-600">
                    <span class="font-medium">Store Hours:</span> {contactInfo.hours}
                  </p>
                  <p class="text-slate-600">
                    <span class="font-medium">Catering Services:</span> {contactInfo.catering}
                  </p>
                </div>
              </div>

              <div class="pt-4">
                <h3 class="font-heading text-xl mb-3">Follow Us</h3>
                <div class="flex gap-4">
                  {socialLinks.map((item) => (
                    <a
                      href={item.url}
                      class="text-slate-600 hover:text-[var(--color-beast-red)] transition-colors"
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      <span class="sr-only">{item.name}</span>
                      <svg
                        class="h-6 w-6"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                        aria-hidden="true"
                      >
                        <path d={item.icon} />
                      </svg>
                    </a>
                  ))}
                </div>
              </div>
            </div>

            <!-- Contact Form -->
            <div class="bg-white p-8 rounded-lg shadow-sm">
              <h2 class="font-heading text-3xl mb-6">Get in Touch</h2>
              <p class="text-slate-600 mb-8">
                Please select the appropriate form below based on your inquiry. Our team will get back to you as soon as possible.
              </p>
              
              <div class="space-y-6">
                <div class="p-6 border border-slate-200 rounded-lg hover:border-[var(--color-beast-red)] transition-colors">
                  <h3 class="font-heading text-xl mb-3">Catering Reservation</h3>
                  <p class="text-slate-600 mb-4">
                    Planning an event? Fill out our catering form to request a quote and check availability.
                  </p>
                  <a 
                    href="https://docs.google.com/forms/d/e/1FAIpQLSfsXuCc_Y6NvFtFtm0-MUVoSN31rz6dv2fn2cWRNNd9oKmNwA/viewform?usp=sharing" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="inline-flex items-center justify-center px-6 py-3 bg-[var(--color-beast-red)] text-white font-semibold rounded-lg hover:bg-[var(--color-meat-raw)] transition-colors"
                  >
                    Catering Form
                  </a>
                </div>
                
                <div class="p-6 border border-slate-200 rounded-lg hover:border-[var(--color-beast-red)] transition-colors">
                  <h3 class="font-heading text-xl mb-3">General Inquiry</h3>
                  <p class="text-slate-600 mb-4">
                    Have questions about our products or services? Use our general inquiry form.
                  </p>
                  <a 
                    href="https://forms.google.com/general-inquiry-placeholder" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="inline-flex items-center justify-center px-6 py-3 bg-[var(--color-beast-red)] text-white font-semibold rounded-lg hover:bg-[var(--color-meat-raw)] transition-colors"
                  >
                    General Inquiry Form
                  </a>
                </div>
                
                <div class="p-6 border border-slate-200 rounded-lg hover:border-[var(--color-beast-red)] transition-colors">
                  <h3 class="font-heading text-xl mb-3">Butchery Order</h3>
                  <p class="text-slate-600 mb-4">
                    Place a custom butchery order for pickup or delivery.
                  </p>
                  <a 
                    href="https://forms.google.com/butchery-order-placeholder" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="inline-flex items-center justify-center px-6 py-3 bg-[var(--color-beast-red)] text-white font-semibold rounded-lg hover:bg-[var(--color-meat-raw)] transition-colors"
                  >
                    Butchery Order Form
                  </a>
                </div>
                
                <div class="p-6 border border-slate-200 rounded-lg hover:border-[var(--color-beast-red)] transition-colors">
                  <h3 class="font-heading text-xl mb-3">Feedback</h3>
                  <p class="text-slate-600 mb-4">
                    We value your feedback! Let us know about your experience with Beast Meat.
                  </p>
                  <a 
                    href="https://forms.google.com/feedback-placeholder" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="inline-flex items-center justify-center px-6 py-3 bg-[var(--color-beast-red)] text-white font-semibold rounded-lg hover:bg-[var(--color-meat-raw)] transition-colors"
                  >
                    Feedback Form
                  </a>
                </div>
              </div>
              
              <div class="mt-8 pt-6 border-t border-slate-200">
                <p class="text-slate-600 text-sm">
                  Prefer to contact us directly? Call us at <a href="tel:+97143306680" class="text-[var(--color-beast-red)] hover:underline">{contactInfo.phone}</a> or email <a href="mailto:customerservice@beastmeat.com" class="text-[var(--color-beast-red)] hover:underline">{contactInfo.email}</a>.
                </p>
              </div>
            </div>
          </div>
        </div>
      </Container>
    </Section>

    <!-- Map Section -->
    <Section class="bg-[var(--color-slate-100)]">
      <Container>
        <div class="max-w-5xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="font-heading text-3xl">Find Us</h2>
            <p class="text-slate-600 mt-2">
              Visit our store at Acacia 1 - Dubai Hills - Dubai, UAE
            </p>
          </div>
          
          <div class="bg-white p-4 rounded-lg shadow-sm overflow-hidden">
            <!-- Stylized map placeholder with Beast Meat theme -->
            <div class="aspect-video bg-gradient-to-br from-slate-100 to-slate-200 rounded-lg relative overflow-hidden">
              <!-- Stylized map grid lines -->
              <div class="absolute inset-0 grid grid-cols-6 grid-rows-4">
                {Array(24).fill(0).map((_, i) => (
                  <div class="border border-slate-300/20"></div>
                ))}
              </div>
              
              <!-- Map roads -->
              <div class="absolute inset-0">
                <div class="absolute top-[30%] left-0 right-0 h-[2px] bg-slate-300/50"></div>
                <div class="absolute top-[60%] left-0 right-0 h-[3px] bg-slate-300/60"></div>
                <div class="absolute left-[25%] top-0 bottom-0 w-[2px] bg-slate-300/50"></div>
                <div class="absolute left-[75%] top-0 bottom-0 w-[3px] bg-slate-300/60"></div>
              </div>
              
              <!-- Beast Meat location marker -->
              <div class="absolute left-1/2 top-1/2 transform -translate-x-1/2 -translate-y-1/2">
                <!-- Marker pin with pulse effect -->
                <div class="relative">
                  <!-- Pulse animation -->
                  <div class="absolute -inset-4 rounded-full bg-[var(--color-beast-red)]/20 animate-ping opacity-75"></div>
                  <div class="absolute -inset-8 rounded-full bg-[var(--color-beast-red)]/10 animate-pulse opacity-50"></div>
                  
                  <!-- Pin -->
                  <div class="relative w-16 h-16 flex items-center justify-center">
                    <svg viewBox="0 0 24 24" class="w-16 h-16 text-[var(--color-beast-red)]" fill="currentColor">
                      <path d="M12 0C7.802 0 4 3.403 4 7.602C4 11.8 7.469 16.812 12 24C16.531 16.812 20 11.8 20 7.602C20 3.403 16.199 0 12 0ZM12 11C10.343 11 9 9.657 9 8C9 6.343 10.343 5 12 5C13.657 5 15 6.343 15 8C15 9.657 13.657 11 12 11Z" />
                    </svg>
                    
                    <!-- Beast Meat logo in pin -->
                    <div class="absolute inset-0 flex items-center justify-center">
                      <div class="w-6 h-6 rounded-full bg-white flex items-center justify-center">
                        <span class="font-heading text-[var(--color-beast-red)] text-xs font-bold">BM</span>
                      </div>
                    </div>
                  </div>
                </div>
                
                <!-- Location label -->
                <div class="absolute top-12 left-1/2 transform -translate-x-1/2 bg-white px-4 py-2 rounded-lg shadow-md whitespace-nowrap">
                  <p class="font-medium text-[var(--color-meat-charred)]">Beast Meat</p>
                  <p class="text-xs text-slate-600">Dubai Hills Community</p>
                </div>
              </div>
              
              <!-- Compass rose -->
              <div class="absolute top-4 right-4 w-12 h-12 bg-white/80 rounded-full flex items-center justify-center">
                <svg viewBox="0 0 24 24" class="w-8 h-8 text-[var(--color-beast-red)]" fill="currentColor">
                  <path d="M12 2L14.85 9.15L22 12L14.85 14.85L12 22L9.15 14.85L2 12L9.15 9.15L12 2Z" />
                </svg>
              </div>
              
              <!-- Scale indicator -->
              <div class="absolute bottom-4 left-4 bg-white/80 px-3 py-1 rounded-md text-xs text-slate-700 flex items-center">
                <div class="w-12 h-1 bg-slate-400 mr-2"></div>
                <span>500m</span>
              </div>
              
              <!-- Coming soon notice -->
              <div class="absolute bottom-4 right-4 bg-[var(--color-beast-red)] text-white px-3 py-1 rounded-md text-xs font-medium">
                Interactive Map Coming Soon
              </div>
            </div>
            
            <!-- Map footer with directions link -->
            <div class="mt-4 flex justify-between items-center">
              <p class="text-slate-600 text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Acacia 1 - Dubai Hills - Dubai, UAE
              </p>
              <a 
                href="https://maps.google.com/?q=Dubai+Hills+Community+Dubai+UAE" 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-[var(--color-beast-red)] hover:underline text-sm font-medium flex items-center"
              >
                Get Directions
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </Container>
    </Section>
  </main>
</Layout> 